{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "paths": {
      "@fontsensei/core/*": ["./src/@fontsensei/core/*"],
      "@fontsensei/components/*": ["./src/@fontsensei/components/*"],
      "@fontsensei/data/*": ["./src/@fontsensei/data/*"],
      "@nextutils/*": ["./src/@nextutils/*"],
      "@nextutils/config": ["./nextutils.config.ts"],
    },

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,
  },
  "include": [
    ".eslintrc.cjs",
    "global.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
//    "**/*.cjs",
//    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "public", "tools"]
}
